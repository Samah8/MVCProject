@model IEnumerable<Department>
@{
    Layout = "_layout2";
    ViewBag.title = "Show Departments";
}


    
    <h3 class="m-2" style="color:palevioletred">Departments</h3>
    <table class="table table-bordered alert-danger ">
      <thead>
          <th>Department ID</th>
          <th>Department Name</th>
          <th>Department Capacity</th>
          <th>Actions</th>
      </thead>
      <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a asp-controller="department" asp-action="edit" asp-route-id="@item.Id" class=" btn btn-outline-secondary">Edit</a>
                            <a asp-controller="department" asp-action="details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                            <a asp-controller="department" asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr colspan="3">
                    <td>There is No Data</td>
                </tr>
            }
      </tbody>
    </table>
    <button class="m-3" style="background-color:antiquewhite">
        <a href="/department/Create" style="text-decoration:none;color:black">Create Department</a>
    </button>
